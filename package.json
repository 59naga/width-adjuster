{
  "private": true,
  "scripts": {
    "start": "abby server:* \"build:* -- --watch\"",
    "server:live": "live-server release --port=59798",
    "build": "abby build:* --env --no-log",
    "build:js": "node --require reify node_modules/.bin/webpack",
    "build:pug": "node --require reify node_modules/.bin/pug src --out release --obj pug.config.js",
    "build:styl": "abby \"node --require reify stylus.config.js\""
  },
  "devDependencies": {
    "abigail": "^1.8.0",
    "autoprefixer-stylus": "^0.9.3",
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.9.0",
    "live-server": "^1.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "reify": "^0.2.3",
    "sanitize.css": "^3.3.0",
    "stylus": "^0.54.5",
    "vue": "^1.0.24",
    "webpack": "^1.13.1"
  },
  "abigail": {
    "plugins": {
      "parse": "parallel",
      "watch": {
        "value": "src/**/*.styl"
      }
    }
  }
}
